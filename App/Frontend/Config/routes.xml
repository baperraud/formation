<?xml version="1.0" encoding="utf-8" ?>
<!--suppress ALL -->
<routes>
    <route url="/" module="News" action="index"></route>
    <route url="/news-insert\.html" module="News" action="insert"></route>
    <route url="/news-update-([0-9]+)\.html" module="News" action="update" vars="id"></route>
    <route url="/news-delete-([0-9]+)\.html" module="News" action="delete" vars="id"></route>
    <route url="/news-([0-9]+)\.html" module="News" action="show" vars="id"></route>
    <route url="/comment-update-([0-9]+)\.html" module="News" action="updateComment" vars="id"></route>
    <route url="/comment-delete-([0-9]+)\.html" module="News" action="deleteComment" vars="id"></route>
    <route url="/commenter-([0-9]+)\.html" module="News" action="insertComment" vars="news"></route>
    <route url="/commenter-([0-9]+)\.json" module="News" action="insertCommentJson" vars="news" format="json"></route>
    <route url="/load-(old|new)-comments-([0-9]+)\.json" module="News" action="loadCommentsJson" vars="type,news" format="json"></route>
    <route url="/get-deleted-comments-([0-9]+)\.json" module="News" action="getDeletedCommentsJson" vars="news" format="json"></route>
    <route url="/device\.html" module="Device" action="index"></route>
    <route url="/login\.html" module="User" action="index"></route>
    <route url="/logout\.html" module="User" action="logout"></route>
    <route url="/membre-([0-9]+)\.html" module="User" action="show" vars="id"></route>
    <route url="/signup\.html" module="User" action="signup"></route>
</routes>